<% if @article.errors.any? %>
    <h2> The following errors prevented the aricle from being saved </h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%=msg%></li>
    <%end%>
    </ul>
<%end%>

<%= form_with(model: @article, local: true) do |field| %>
<p>
  <%= field.label :title %> <br>
  <%= field.text_field :title %> 
</p>
<p>
  <%= field.label :description %> <br>
  <%= field.text_area :description %>
</p>
<p>
<%= field.submit %> 
</p>
<% end %>