<div class="container">
<div class="row justify-content-center">
  <div class="col-10">
  <%= render 'shared/errors' ,obj: @article%>

    <%= form_with(model: @article, class:"shadow p-3 mb-3 bg-info rounded",local: true) do |field| %>
    <div class="form-group row">
      <%= field.label :title , class:"col-2 col-form-label text-light" %> <br>
        <div class="col-10">
          <%= field.text_field :title, class:"form-control shadow rounded" ,placeholder: "Title of artice" %> 
        </div>
    </div>

    <div class="form-group row">
      <%= field.label :description , class:"col-2 col-form-label text-light" %> <br>
      <div class="col-10">
        <%= field.text_area :description, rows:10, class:"form-control shadow rounded" ,placeholder:"Description of article"%>
      </div>
    </div>

    <div class="form-group row">
      <%= field.label :category , class:"col-2 col-form-label text-light" %> <br>
      <div class="col-10">
        <%= field.collection_select(:category_ids,Category.all, :id, :name,
        {prompt: "Make your selection from the list below (can be empty)"}, {multiple: true,size: 3, class:"custom-select shadow rounded"})  %>
      </div>
    </div>




    <div class="form-group row justify-content-center">
      <%= field.submit class:"btn btn-outline-light ntn-lg" %> 
    </div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= link_to '[Cancel and return to the list]', articles_path,class:"text-info" %>
  </div>
</div>