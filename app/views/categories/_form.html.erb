  <%= render 'shared/errors', obj: @category %>

    <%= form_with(model: @category, class:"shadow p-3 mb-3 bg-info rounded",local: true) do |field| %>
    <div class="form-group row">
      <%= field.label :name ,"Category name" , class:"col-2 col-form-label text-light" %> <br>
        <div class="col-10">
          <%= field.text_field :name, class:"form-control shadow rounded" ,placeholder: "Enter a name" %> 
        </div>
    </div>



    <div class="form-group row justify-content-center">
      <%= field.submit class:"btn btn-outline-light ntn-lg" %> 
    </div>
    <% end %>
