<h1 class="text-center mt-4">Create a new category</h1>



<div class="container">
<div class="row justify-content-center">
  <div class="col-10">
  <%= render 'shared/errors', obj: @category %>

    <%= form_with(model: @category, class:"shadow p-3 mb-3 bg-info rounded",local: true) do |field| %>
    <div class="form-group row">
      <%= field.label :name ,"Category name" , class:"col-2 col-form-label text-light" %> <br>
        <div class="col-10">
          <%= field.text_field :name, class:"form-control shadow rounded" ,placeholder: "Enter a name" %> 
        </div>
    </div>



    <div class="form-group row justify-content-center">
      <%= field.submit class:"btn btn-outline-light ntn-lg" %> 
    </div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= link_to '[Cancel and return to the list]', articles_path,class:"text-info" %>
  </div>
</div>
