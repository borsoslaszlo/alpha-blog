<div class="container">
<div class="row justify-content-center">
  <div class="col-10">
  <%= render 'shared/errors', obj: @user %>

    <%= form_with(model: @user, class:"shadow p-3 mb-3 bg-info rounded",local: true) do |field| %>
    <div class="form-group row">
      <%= field.label :username , class:"col-2 col-form-label text-light" %> <br>
        <div class="col-10">
          <%= field.text_field :username, class:"form-control shadow rounded" ,placeholder: "Enter a username" %> 
        </div>
    </div>

    <div class="form-group row">
      <%= field.label :email , class:"col-2 col-form-label text-light" %> <br>
      <div class="col-10">
        <%= field.email_field :email, class:"form-control shadow rounded" ,placeholder:"Email address"%>
      </div>
    </div>

    <div class="form-group row">
      <%= field.label :password , class:"col-2 col-form-label text-light" %> <br>
      <div class="col-10">
        <%= field.password_field :password, class:"form-control shadow rounded" ,placeholder:"Password"%>
      </div>
    </div>



    <div class="form-group row justify-content-center">
      <%= field.submit @user.new_record? ? "Sign up" : "Update account" ,class:"btn btn-outline-light ntn-lg" %> 
    </div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= link_to '[Cancel and return to the list]', articles_path,class:"text-info" %>
  </div>
</div>