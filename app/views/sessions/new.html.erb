<h1 class="text-center mt-4">Log in</h1>


<div class="container">
<div class="row justify-content-center">
  <div class="col-10">

    <%= form_with(scope: :session, url: login_path, class:"shadow p-3 mb-3 bg-info rounded",local: true) do |field| %>

    <div class="form-group row">
      <%= field.label :email , class:"col-2 col-form-label text-light" %> <br>
      <div class="col-10">
        <%= field.email_field :email, class:"form-control shadow rounded" ,placeholder:"Email address"%>
      </div>
    </div>

    <div class="form-group row">
      <%= field.label :password , class:"col-2 col-form-label text-light" %> <br>
      <div class="col-10">
        <%= field.password_field :password, class:"form-control shadow rounded" ,placeholder:"Enter your password"%>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <%= field.submit "Log in" ,class:"btn btn-outline-light ntn-lg" %> 
    </div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= link_to '[Cancel and return to the list]', articles_path,class:"text-info" %>
  </div>
</div>

